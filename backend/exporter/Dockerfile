# ============================================================================
# DOCKERFILE - EXPORTADOR MQTT
# Monitoramento Inteligente de Clusters - IF-UFG
# ============================================================================

FROM python:3.11-slim

# ============================================================================
# METADADOS
# ============================================================================
LABEL maintainer="victor.matt2003@gmail.com"
LABEL description="Exportador MQTT para Prometheus"
LABEL version="1.0"

# ============================================================================
# CONFIGURAÇÕES DE AMBIENTE
# ============================================================================
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV TZ=America/Sao_Paulo

# ============================================================================
# INSTALAÇÃO DE DEPENDÊNCIAS DO SISTEMA
# ============================================================================
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# ============================================================================
# CRIAÇÃO DO USUÁRIO
# ============================================================================
RUN groupadd -r exporter && useradd -r -g exporter exporter

# ============================================================================
# CONFIGURAÇÃO DO DIRETÓRIO DE TRABALHO
# ============================================================================
WORKDIR /app

# ============================================================================
# INSTALAÇÃO DE DEPENDÊNCIAS PYTHON
# ============================================================================
COPY requirements.txt .

RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# ============================================================================
# CÓPIA DO CÓDIGO
# ============================================================================
COPY . .

# ============================================================================
# CRIAÇÃO DE DIRETÓRIOS NECESSÁRIOS
# ============================================================================
RUN mkdir -p /app/data && \
    chown -R exporter:exporter /app

# ============================================================================
# MUDANÇA PARA USUÁRIO NÃO-ROOT
# ============================================================================
USER exporter

# ============================================================================
# EXPOSIÇÃO DE PORTAS
# ============================================================================
EXPOSE 8000

# ============================================================================
# HEALTH CHECK
# ============================================================================
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# ============================================================================
# COMANDO DE INICIALIZAÇÃO
# ============================================================================
CMD ["python", "mqtt_exporter.py"] 